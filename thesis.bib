author = {Turney, J. E. and Landry, E. S. and McGaughey, A. J.H. and Amon, C. H.},
doi = {10.1103/PhysRevB.79.064301},
file = {:nfs/see-fs-01{\_}teaching/ee10bt/phd/papers/mendeley/Turney et al. - 2009 - Predicting phonon properties and thermal conductivity from anharmonic lattice dynamics calculations and molecular.pdf:pdf},
issn = {10980121},
journal = {Phys. Rev. B - Condens. Matter Mater. Phys.},
number = {6},
pages = {1--12},
title = {{Predicting phonon properties and thermal conductivity from anharmonic lattice dynamics calculations and molecular dynamics simulations}},
volume = {79},
year = {2009}
}
