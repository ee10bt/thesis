doi = {10.1007/s00710-009-0068-z},
file = {:nfs/see-fs-01{\_}teaching/ee10bt/phd/papers/mendeley/Tr{\o}nnes - 2010 - Erratum to Structure, mineralogy and dynamics of the lowermost mantle.pdf:pdf},
issn = {09300708},
journal = {Mineral. Petrol.},
number = {3-4},
pages = {243--261},
title = {{Erratum to: Structure, mineralogy and dynamics of the lowermost mantle}},
volume = {99},
year = {2010}
}
@article{Turney2009,
